/*
 * HORIZONTAL COMBOS
 *
 * Work on ALL keycap profiles (Cherry, OEM, SA, DSA, etc.) since they can
 * be pressed with multiple fingers simultaneously.
 *
 * KEY POSITIONS:
 *   ╭─────────────────────╮ ╭─────────────────────╮
 *   │ LT4 LT3 LT2 LT1 LT0 │ │ RT0 RT1 RT2 RT3 RT4 │
 *   │ LM4 LM3 LM2 LM1 LM0 │ │ RM0 RM1 RM2 RM3 RM4 │
 *   │ LB4 LB3 LB2 LB1 LB0 │ │ RB0 RB1 RB2 RB3 RB4 │
 *   ╰───────╮ LH2 LH1 LH0 │ │ RH0 RH1 RH2 ╭───────╯
 *           ╰─────────────╯ ╰─────────────╯
 *
 * VISUAL LAYOUT (Colemak-DH):
 *
 *   ╭──────────────────────────────╮ ╭──────────────────────────────╮
 *   │    W  ────  F  ────  P       │ │       L  ────  U  ────  Y    │
 *   │    ╰  esc  ╯ ╰ mouse ╯       │ │       ╰   {   ╯ ╰   }   ╯    │
 *   │                              │ │                              │
 *   │    R  ────  S  ────  T       │ │       N  ────  E  ────  I    │
 *   │    ╰  tab  ╯ ╰ leader╯       │ │       ╰  ( <  ╯ ╰  ) >  ╯    │
 *   │    ╰── leader+sft ───╯       │ │                              │
 *   │                              │ │                              │
 *   │    X  ────  C  ────  D       │ │       H  ────  ,  ────  .    │
 *   │    ╰  copy ╯ ╰ paste ╯       │ │       ╰   [   ╯ ╰   ]   ╯    │
 *   │    ╰────── cut ──────╯       │ │                              │
 *   ╰──────────────────────────────╯ ╰──────────────────────────────╯
 *
 *   On NAV layer: ( ) become < >
 *
 * SYMBOLS NOT PROVIDED (available in combos_vertical.dtsi):
 *   @ # $ %    - decorators, comments, variables, modulo
 *   ` \ = ~    - template literals, escapes, assignment, home dir
 *   ^ + * &    - exponents, arithmetic, pointers, references
 *   _ - / |    - identifiers, subtraction, paths, pipes
 *
 * If not using vertical combos, you'll need alternative access to the above
 * symbols via layers, leader sequences, or other methods.
 */

#include "combos_config.dtsi"

/* Left hand - top row */
ZMK_COMBO(esc,   &kp ESC,      LT3 LT2,     DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(mouse, &smart_mouse, LT2 LT1,     DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)

/* Left hand - home row */
// Combos overlapping HRMs are set up as hold-taps themselves to allow for instantaneous
// chording of mods. Custom hold-tap instances can be bootstrapped on the go using the
// 8-argument version of ZMK_COMBO defined in base.keymap.
ZMK_COMBO(tab,   &hml LS(LALT)TAB, LM3 LM2, DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(ldr,   &leader,      LM2 LM1,     DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST, LS(LCTRL),    KEYS_R)
ZMK_COMBO(ldrsh, &leader_sft,  LM3 LM2 LM1, DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST, LS(LC(LALT)), KEYS_R)

/* Left hand - bottom row */
ZMK_COMBO(cut,   &kp LG(X),    LB3 LB1,     DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(copy,  &kp LG(C),    LB3 LB2,     DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(paste, &kp LG(V),    LB2 LB1,     DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)

/* Right hand - top row: braces */
ZMK_COMBO(lbrc,  &kp LBRC,     RT1 RT2,     DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(rbrc,  &kp RBRC,     RT2 RT3,     DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)

/* Right hand - home row: parentheses and angle brackets */
ZMK_COMBO(lpar,  &lpar_lt,     RM1 RM2,     DEF     NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST, RS(LCTRL),    KEYS_L)
ZMK_COMBO(rpar,  &rpar_gt,     RM2 RM3,     DEF     NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST, RS(LALT),     KEYS_L)
ZMK_COMBO(lt,    &kp LT,       RM1 RM2,         NAV    , COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(gt,    &kp GT,       RM2 RM3,         NAV    , COMBO_TERM_FAST, COMBO_IDLE_FAST)

/* Right hand - bottom row: brackets */
ZMK_COMBO(lbkt,  &kp LBKT,     RB1 RB2,     DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(rbkt,  &kp RBKT,     RB2 RB3,     DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
